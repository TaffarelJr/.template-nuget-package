#───────────────────────────────────────────────────────────────────────────────
# EditorConfig: https://EditorConfig.org
# Remove the line below if you want to inherit .editorconfig settings from higher directories
#───────────────────────────────────────────────────────────────────────────────
root = true

#───────────────────────────────────────────────────────────────────────────────
# Core Settings
#───────────────────────────────────────────────────────────────────────────────

# Defaults for all files
[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

# Looks better with 2-space indentation
[*.{md,yaml,yml}]
indent_size = 2
tab_width = 2

# Required by file format
[*.{yaml,yml}]
indent_style = space

#───────────────────────────────────────────────────────────────────────────────
# Vertical rulers
#───────────────────────────────────────────────────────────────────────────────

# VS: https://marketplace.visualstudio.com/items?itemName=PaulHarrington.EditorGuidelinesPreview
# VS Code: Go to Settings->Rulers (convert from ARGB here, to RGBA in Settings)

[*]
guidelines = 80 1px solid 5000ff00, 100 1px solid 75ffff00, 120 1px solid ff8b0000
